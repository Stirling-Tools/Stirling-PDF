root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
max_line_length = 127
insert_final_newline = true
trim_trailing_whitespace = true

[*.java]
indent_size = 4
max_line_length = 100

[*.py]
indent_size = 2

[*.gradle]
indent_size = 4

[*.html]
indent_size = 2
insert_final_newline = false
trim_trailing_whitespace = false

[*.js]
indent_size = 2

[*.yaml]
insert_final_newline = false
trim_trailing_whitespace = false
