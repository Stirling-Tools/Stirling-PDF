{
  "extends": "./tsconfig.proprietary.vite.json",
  "compilerOptions": {
    "paths": {
      "@app/*": [
        "src/desktop/*",
        "src/proprietary/*",
        "src/core/*"
      ],
      "@desktop/*": ["src/desktop/*"],
      "@proprietary/*": ["src/proprietary/*"],
      "@core/*": ["src/core/*"]
    }
  },
  "exclude": [
    "src/core/**/*.test.ts*",
    "src/core/**/*.spec.ts*",
    "src/proprietary/**/*.test.ts*",
    "src/proprietary/**/*.spec.ts*",
    "node_modules"
  ]
}
